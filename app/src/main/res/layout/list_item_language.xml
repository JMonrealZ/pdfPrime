<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivLanImg"
        android:layout_width="@dimen/imgSizeLanguage"
        android:layout_height="@dimen/imgSizeLanguage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivLanSelected"
        android:layout_width="@dimen/imgSizeLanguageSelected"
        android:layout_height="@dimen/imgSizeLanguageSelected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_check_circle_24"/>
</androidx.constraintlayout.widget.ConstraintLayout>

